<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cab Registration</title>
    {{!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="jquery-3.6.4.min.js"></script> --}}
    <link rel="stylesheet" href="css/cab_registration.css">
</head>
<body>
    

    <div class="container">
        <header>
            <!-- <h1>
                <a href="#">
                    <img src="http://tfgms.com/sandbox/dailyui/logo-1.png" alt="Cab services">
                </a>
            </h1> -->
        </header>
        <h1 class="text-center">Register</h1>
        <form class="registration-form" enctype="multipart/form-data" onsubmit="return validation()" method="post">
            <!-- <label class="col-one-half">
                <span class="label-text">First Name</span>
                <input type="text" name="firstName">
            </label>
            <label class="col-one-half">
                <span class="label-text">Last Name</span>
                <input type="text" name="lastName">
            </label> -->
            <label>
                <span class="label-text" id="model">Cab Model</span>
                <input type="text" name="model" id="model1">
            </label>
            <label>
                <span class="label-text" id="ID">Cab Registration Number</span>
                <input type="text" name="ID" id="ID1">
            </label>
            <label>
                <span class="label-text" id="colour">Cab Colour</span>
                <input type="text" name="colour" id="colour1">
            </label>
            <label >
                <span class="label-text" id="avatar">Select Picture</span>
                <input type="file" name="avatar" id="avatar1" class="avatar" >
            </label>
            {{!-- accept="image/*" required / --}}
            <br>
            <div class="text-center">
                <button class="submit" name="register" >Sign Me Up</button>
            </div>
        </form>
    </div> 
    <!-- Javascript files for driver registration -->
    <script >
         function validation(){
            var model = document.getElementById('model1').value;
            var ID = document.getElementById('ID1').value;
            var colour = document.getElementById('colour1').value;
            var avatar = document.getElementById('avatar1').value;
            
            if (model == "") {
                document.getElementById('model1').innerText = "Please fill model name";
                alert("Please fill model name")
                return false;
            }
             
            if (ID == "") {
                document.getElementById('ID1').innerText = "Please fill ID";
                alert("Please fill ID")
                return false;
            }
            
            if (colour == "") {
                document.getElementById('colour1').innerText = "Please fill colour";
                alert("Please fill colour");
                return false;
            }
            if(avatar==""){
                 document.getElementById('avatar1').innerText = "Image not selected";
                 alert("Image not selected");
                return false;
            }
            var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;
             
            if (!allowedExtensions.exec(avatar)) {
                 document.getElementById('avatar1').innerText = "Invalid file type";
                 alert("Invalid file type");
                return false;
            }
           
             
            return true;

        }
         
     
        

    </script>

</body>
</html>